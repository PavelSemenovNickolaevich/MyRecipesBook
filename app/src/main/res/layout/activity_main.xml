<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageButton
        android:id="@+id/menu_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/marginStartMainActivity_16dp"
        android:layout_marginTop="@dimen/marginTopMainActivity_16dp"
        android:backgroundTint="@color/white"
        android:src="@drawable/menu" />

    <ImageButton
        android:id="@+id/ring_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/marginTopMainActivity_16dp"
        android:layout_marginEnd="@dimen/marginEndMainActivity_16dp"
        android:backgroundTint="@color/white"
        android:src="@drawable/ring" />

    <TextView
        android:id="@+id/greetings_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/menu_btn"
        android:layout_marginStart="@dimen/marginStartMainActivity_24dp"
        android:layout_marginTop="@dimen/marginStartMainActivity_25dp"
        android:text="@string/greetings_user_text"
        android:textSize="@dimen/textSize_12sp" />

    <TextView
        android:id="@+id/what_will_you_cook_today_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/greetings_user"
        android:layout_marginStart="@dimen/marginStartMainActivity_24dp"
        android:text="@string/what_will_you_cook_today_header"
        android:textColor="@color/black"
        android:textSize="@dimen/textSize_24sp"
        android:textStyle="bold" />


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/search_layout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/what_will_you_cook_today_header"
        android:layout_marginStart="@dimen/marginStartMainActivity_24dp"
        app:hintEnabled="false"
        app:hintTextColor="@color/dark_grey"
        app:startIconDrawable="@drawable/search_xml"
        app:startIconTint="@color/dark_grey">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/search_input_text"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/marginEndMainActivity_80dp"
            android:background="@drawable/edit_round"
            android:hint="@string/search_field_placeholder"
            android:maxLines="1"
            android:textSize="@dimen/textSize_12sp" />
    </com.google.android.material.textfield.TextInputLayout>


    <ImageButton
        android:id="@+id/filter_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/what_will_you_cook_today_header"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/marginTopMainActivity_5dp"
        android:layout_marginEnd="@dimen/marginEndMainActivity_30dp"
        android:background="@drawable/edit_round"
        android:backgroundTint="@color/gray"
        android:foregroundGravity="clip_horizontal"
        android:scaleX="1.5"
        android:scaleY="1.5"
        android:src="@drawable/filter_btn" />


    <TextView
        android:id="@+id/popular_recipe_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/search_layout"
        android:layout_marginStart="@dimen/marginStartMainActivity_24dp"
        android:layout_marginTop="@dimen/marginTopMainActivity_24dp"
        android:text="@string/popular_recipes_title"
        android:textColor="@color/black"
        android:textSize="@dimen/textSize_20sp"
        android:textStyle="bold" />

    <Button
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/search_layout"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/marginTopMainActivity_15dp"
        android:layout_marginEnd="@dimen/marginEndMainActivity_15dp"
        android:text="@string/more_title"
        android:textAllCaps="false"
        android:textColor="@color/orange"
        android:textSize="@dimen/textSize_15sp" />

    <LinearLayout
        android:id="@+id/popular_cards"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/popular_recipe_title"
        android:layout_marginStart="@dimen/marginStartMainActivity_24dp"
        android:layout_marginTop="@dimen/marginTopMainActivity_10dp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="147dp"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/gray"
            app:cardCornerRadius="@dimen/cardCornerRadius_10dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/recipe_1"
                    android:layout_width="144dp"
                    android:layout_height="86dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/french_toast_with_strawsberry" />

                <TextView
                    android:id="@+id/tv_type_of_meals_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/recipe_1"
                    android:layout_marginStart="@dimen/marginStartMainActivity_5dp"
                    android:text="@string/breakfast_title"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/textSize_12sp" />

                <TextView
                    android:id="@+id/title_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_type_of_meals_tv"
                    android:layout_marginStart="@dimen/marginStartMainActivity_5dp"
                    android:maxWidth="@dimen/maxWidthMainActivity_120dp"
                    android:text="@string/list_of_popular_1_title"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textSize_12sp" />

                <LinearLayout
                    android:id="@+id/rating_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/title_1">

                    <RatingBar
                        android:id="@+id/ratingBar_1"
                        style="@style/Widget.AppCompat.RatingBar.Small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/marginStartMainActivity_5dp"
                        android:progressTint="@color/orange"
                        android:rating="5" />

                    <androidx.appcompat.widget.AppCompatCheckBox
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/marginStartMainActivity_30dp"
                        android:button="@drawable/like" />

                </LinearLayout>

                <TextView
                    android:id="@+id/calories_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rating_1"
                    android:layout_marginStart="@dimen/marginStartMainActivity_5dp"
                    android:text="120 калорий"
                    android:textColor="@color/orange"
                    android:textSize="@dimen/textSize_10sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/calories_1"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/timer_1"
                        android:layout_width="15dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="@dimen/marginStartMainActivity_3dp"
                        android:src="@drawable/time" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/marginStartMainActivity_3dp"
                        android:gravity="center"
                        android:text="10 мин"
                        android:textColor="@color/dark_grey"
                        android:textSize="@dimen/textSize_10sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/calories_1"
                    android:layout_alignParentEnd="true"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/meal_1"
                        android:layout_width="15dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="@dimen/marginStartMainActivity_3dp"
                        android:src="@drawable/service_desk" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/marginStartMainActivity_3dp"
                        android:layout_marginEnd="@dimen/marginStartMainActivity_3dp"
                        android:gravity="center"
                        android:text="1 порция"
                        android:textColor="@color/dark_grey"
                        android:textSize="@dimen/textSize_10sp" />
                </LinearLayout>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="147dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/marginStartMainActivity_50dp"
            app:cardBackgroundColor="@color/gray"
            app:cardCornerRadius="@dimen/cardCornerRadius_10dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/recipe_2"
                    android:layout_width="144dp"
                    android:layout_height="86dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/toast_with_sugar_image" />

                <TextView
                    android:id="@+id/type_of_meals_recipe_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/recipe_2"
                    android:layout_marginStart="@dimen/marginStartMainActivity_5dp"
                    android:text="@string/breakfast_title"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/textSize_12sp" />

                <TextView
                    android:id="@+id/title_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/type_of_meals_recipe_2"
                    android:layout_marginStart="@dimen/marginStartMainActivity_5dp"
                    android:maxWidth="120dp"
                    android:text="@string/list_of_popular_2_title"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textSize_12sp" />

                <LinearLayout
                    android:id="@+id/rating_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/title_2">

                    <RatingBar
                        android:id="@+id/ratingBar_2"
                        style="@style/Widget.AppCompat.RatingBar.Small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/marginStartMainActivity_5dp"
                        android:progressTint="@color/orange"
                        android:rating="4" />

                    <androidx.appcompat.widget.AppCompatCheckBox
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/marginStartMainActivity_30dp"
                        android:button="@drawable/like_second_variant" />

                </LinearLayout>

                <TextView
                    android:id="@+id/calories_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rating_2"
                    android:layout_marginStart="@dimen/marginStartMainActivity_5dp"
                    android:text="135 калорий"
                    android:textColor="@color/orange"
                    android:textSize="@dimen/textSize_10sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/calories_2"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/timer_2"
                        android:layout_width="15dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="@dimen/marginStartMainActivity_3dp"
                        android:src="@drawable/time" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/marginStartMainActivity_3dp"
                        android:gravity="center"
                        android:text="15 мин"
                        android:textColor="@color/dark_grey"
                        android:textSize="@dimen/textSize_10sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/calories_2"
                    android:layout_alignParentEnd="true"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/meal_2"
                        android:layout_width="15dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="@dimen/marginStartMainActivity_3dp"
                        android:src="@drawable/service_desk" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/marginStartMainActivity_3dp"
                        android:layout_marginEnd="@dimen/marginStartMainActivity_3dp"
                        android:gravity="center"
                        android:text="1 порция"
                        android:textColor="@color/dark_grey"
                        android:textSize="@dimen/textSize_10sp" />
                </LinearLayout>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/recommend_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/popular_cards">

        <TextView
            android:id="@+id/recommend_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="@dimen/marginStartMainActivity_24dp"
            android:layout_marginTop="@dimen/marginTopMainActivity_24dp"
            android:text="Рекомендуем"
            android:textColor="@color/black"
            android:textSize="@dimen/textSize_20sp"
            android:textStyle="bold" />

        <Button
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/marginTopMainActivity_15dp"
            android:layout_marginEnd="@dimen/marginEndMainActivity_15dp"
            android:text="@string/more_title"
            android:textAllCaps="false"
            android:textColor="@color/orange"
            android:textSize="@dimen/textSize_15sp" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/recommend_cards"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/recommend_header"
        android:layout_marginStart="@dimen/marginStartMainActivity_24dp"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/recommend_recipe_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/gray"
            app:cardCornerRadius="10dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


                <ImageView
                    android:id="@+id/rec_recipe_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:scaleType="center"
                    android:src="@drawable/blueberry_muffins" />

                <LinearLayout
                    android:id="@+id/description_rec_dish_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="100dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/type_of_meals"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/marginStartMainActivity_5dp"
                        android:text="@string/breakfast_title"
                        android:textColor="@color/blue"
                        android:textSize="@dimen/textSize_10sp" />

                    <TextView
                        android:id="@+id/rec_title_dish_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/marginStartMainActivity_5dp"
                        android:text="@string/list_of_recommended_1_title"
                        android:textColor="@color/black"
                        android:textSize="@dimen/textSize_12sp" />

                    <LinearLayout
                        android:id="@+id/rec_rating_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <RatingBar
                            android:id="@+id/rec_ratingBar_1"
                            style="@style/Widget.AppCompat.RatingBar.Small"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/marginStartMainActivity_5dp"
                            android:layout_marginTop="@dimen/marginTopMainActivity_5dp"
                            android:layout_marginEnd="@dimen/marginEndMainActivity_5dp"
                            android:progressTint="@color/orange"
                            android:rating="3"
                            android:stepSize="0.1" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/marginStartMainActivity_5dp"
                            android:layout_marginTop="@dimen/marginTopMainActivity_5dp"
                            android:text="120 калорий"
                            android:textColor="@color/orange"
                            android:textSize="@dimen/textSize_10sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/rec_footer_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/rec_timer_1"
                                android:layout_width="15dp"
                                android:layout_height="30dp"
                                android:layout_marginStart="@dimen/marginStartMainActivity_5dp"
                                android:src="@drawable/time" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginStart="@dimen/marginStartMainActivity_3dp"
                                android:gravity="center"
                                android:text="10 мин"
                                android:textColor="@color/dark_grey"
                                android:textSize="@dimen/textSize_10sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/marginStartMainActivity_35dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/rec_meal_1"
                                android:layout_width="15dp"
                                android:layout_height="@dimen/marginStartMainActivity_30do"
                                android:layout_marginStart="@dimen/marginStartMainActivity_3dp"
                                android:src="@drawable/service_desk" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginStart="@dimen/marginStartMainActivity_3dp"
                                android:gravity="center"
                                android:text="1 порция"
                                android:textColor="@color/dark_grey"
                                android:textSize="@dimen/textSize_10sp" />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/description_rec_dish_1">

                    <androidx.appcompat.widget.AppCompatCheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/marginStartMainActivity_40dp"
                        android:button="@drawable/like"
                        android:gravity="center" />
                </LinearLayout>


            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/recommend_recipe_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:cardBackgroundColor="@color/gray"
            app:cardCornerRadius="@dimen/cardCornerRadius_10dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/rec_recipe_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/fish_dish_1" />

                <LinearLayout
                    android:id="@+id/description_rec_dish_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="100dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/rec_type_of_meals_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/marginStartMainActivity_5dp"
                        android:text="@string/lunch_title"
                        android:textColor="@color/blue"
                        android:textSize="@dimen/textSize_10sp" />

                    <TextView
                        android:id="@+id/rec_title_dish_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/marginStartMainActivity_5dp"
                        android:text="@string/list_of_recommended_2_title"
                        android:textColor="@color/black"
                        android:textSize="@dimen/textSize_12sp" />

                    <LinearLayout
                        android:id="@+id/rec_rating_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <RatingBar
                            android:id="@+id/rec_rating_bar_2"
                            style="@style/Widget.AppCompat.RatingBar.Small"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/marginStartMainActivity_5dp"
                            android:layout_marginTop="@dimen/marginTopMainActivity_5dp"
                            android:layout_marginEnd="@dimen/marginEndMainActivity_5dp"
                            android:progressTint="@color/orange"
                            android:rating="5"
                            android:stepSize="0.1" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/marginStartMainActivity_5dp"
                            android:layout_marginTop="@dimen/marginTopMainActivity_5dp"
                            android:text="280 калорий"
                            android:textColor="@color/orange"
                            android:textSize="@dimen/textSize_10sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/rec_footer_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/rec_timer_2"
                                android:layout_width="15dp"
                                android:layout_height="30dp"
                                android:layout_marginStart="@dimen/marginStartMainActivity_5dp"
                                android:src="@drawable/time" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginStart="@dimen/marginStartMainActivity_3dp"
                                android:gravity="center"
                                android:text="45 мин"
                                android:textColor="@color/dark_grey"
                                android:textSize="@dimen/textSize_10sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="35dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/rec_meal_2"
                                android:layout_width="15dp"
                                android:layout_height="@dimen/marginStartMainActivity_30do"
                                android:layout_marginStart="@dimen/marginStartMainActivity_3dp"
                                android:src="@drawable/service_desk" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginStart="@dimen/marginStartMainActivity_3dp"
                                android:gravity="center"
                                android:text="1 порция"
                                android:textColor="@color/dark_grey"
                                android:textSize="@dimen/textSize_10sp" />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/description_rec_dish_2"
                    tools:ignore="TooManyViews">

                    <androidx.appcompat.widget.AppCompatCheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="40dp"
                        android:button="@drawable/like"
                        android:gravity="center_vertical" />
                </LinearLayout>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</RelativeLayout>