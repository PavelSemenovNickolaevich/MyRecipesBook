<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.FilterActivity">

    <RelativeLayout
        android:id="@+id/top_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="@dimen/indentFromTheMarginStartFilterActivity_15"
            android:layout_marginTop="@dimen/indentFromTheMarginTopFilterActivity_10"
            android:text="Фильтр"
            android:textColor="@color/black"
            android:textSize="@dimen/textSize_24sp" />

        <Button
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:text="Очистить"
            android:textAllCaps="false"
            android:textColor="@color/orange"
            android:textSize="@dimen/textSize_16sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/type_of_meals_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/indentFromTheMarginStartFilterActivity_15"
        android:layout_marginTop="@dimen/indentFromTheMarginTopFilterActivity_10"
        android:text="Прием пищи"
        android:textColor="@color/black"
        android:textSize="@dimen/textSize_16sp"
        android:textStyle="bold" />

    <com.google.android.material.chip.ChipGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_medium_variant_two_30dp"
        style="@style/CustomChipChoice"
        app:chipSpacingHorizontal="@dimen/margin_medium_variant_two_30dp"
        app:singleSelection="true">

        <com.google.android.material.chip.Chip
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Завтрак"
            app:chipCornerRadius="8dp" />

        <com.google.android.material.chip.Chip
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Поздний завтрак"
            app:chipCornerRadius="8dp" />

        <com.google.android.material.chip.Chip
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Обед"
            app:chipCornerRadius="8dp" />

        <com.google.android.material.chip.Chip
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/breakfast_ch"
            android:text="Ужин"
            app:chipCornerRadius="8dp" />

    </com.google.android.material.chip.ChipGroup>

    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/line_1_md"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/indentFromTheMarginStartFilterActivity_15"
        android:layout_marginTop="@dimen/indentFromTheMarginTopFilterActivity_10"
        android:layout_marginEnd="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/indentFromTheMarginStartFilterActivity_15"
        android:layout_marginTop="@dimen/indentFromTheMarginTopFilterActivity_10"
        android:text="Блюдо"
        android:textColor="@color/black"
        android:textSize="@dimen/textSize_16sp"
        android:textStyle="bold" />

    <com.google.android.material.chip.ChipGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_medium_variant_two_30dp"
        style="@style/CustomChipChoice"
        app:chipSpacingHorizontal="@dimen/margin_medium_variant_two_30dp"
        app:singleSelection="true">

        <com.google.android.material.chip.Chip
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cупы"
            app:chipCornerRadius="8dp" />

        <com.google.android.material.chip.Chip
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Закуски"
            app:chipCornerRadius="8dp" />

        <com.google.android.material.chip.Chip
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Первое блюдо"
            app:chipCornerRadius="8dp" />

        <com.google.android.material.chip.Chip
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Главное блюдо"
            app:chipCornerRadius="8dp" />

        <com.google.android.material.chip.Chip
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Напитки"
            app:chipCornerRadius="8dp" />

        <com.google.android.material.chip.Chip
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Десерты"
            app:chipCornerRadius="8dp" />

        <com.google.android.material.chip.Chip
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Мясные блюда"
            app:chipCornerRadius="8dp" />

    </com.google.android.material.chip.ChipGroup>

    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/indentFromTheMarginStartFilterActivity_15"
        android:layout_marginTop="@dimen/indentFromTheMarginTopFilterActivity_10"
        android:layout_marginRight="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/indentFromTheMarginStartFilterActivity_15"
        android:layout_marginTop="@dimen/indentFromTheMarginTopFilterActivity_10"
        android:text="Количество  порций"
        android:textColor="@color/black"
        android:textSize="@dimen/textSize_16sp"
        android:textStyle="bold" />

    <SeekBar
        android:id="@+id/count_of_serving_seekbar"
        style="@style/FiltersStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_mini_5dp"
        android:max="5" />

    <TextView
        android:id="@+id/count_of_serving_seekbar_value"
        android:layout_gravity="center"
        android:text="2"
        android:textSize="@dimen/textSize_12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/time_to_cook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/indentFromTheMarginStartFilterActivity_15"
        android:text="Время приготовления"
        android:textColor="@color/black"
        android:textSize="@dimen/textSize_16sp"
        android:textStyle="bold" />

    <SeekBar
        android:id="@+id/time_to_cook_seekbar"
        style="@style/FiltersStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="120"
        android:layout_marginTop="@dimen/margin_mini_5dp" />

    <TextView
        android:id="@+id/time_to_cook_seekbar_value"
        android:layout_gravity="center"
        android:text="20 мин"
        android:textSize="@dimen/textSize_12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/calories_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/indentFromTheMarginStartFilterActivity_15"
        android:text="Калории"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold" />

    <SeekBar
        android:id="@+id/calories_seekbar"
        style="@style/FiltersStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="1000"
        android:layout_marginTop="@dimen/margin_mini_5dp" />

    <TextView
        android:id="@+id/calories_seekbar_value"
        android:layout_gravity="center"
        android:text="200 кал"
        android:textSize="@dimen/textSize_12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/rating_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/indentFromTheMarginStartFilterActivity_15"
        android:text="Рейтинг"
        android:textColor="@color/black"
        android:textSize="@dimen/textSize_16sp"
        android:textStyle="bold" />

    <SeekBar
        android:id="@+id/rating_seekbar"
        style="@style/FiltersStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="5"
        android:layout_marginTop="@dimen/margin_mini_5dp" />

    <TextView
        android:id="@+id/rating_seekbar_value"
        android:layout_gravity="center"
        android:text="1"
        android:textSize="@dimen/textSize_12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/applyBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/orange"
        android:paddingLeft="80dp"
        android:paddingRight="80dp"
        android:text="Применить"
        android:textAllCaps="false"
        app:cornerRadius="20dp" />

</LinearLayout>